<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- ID -->
    <TextView
        android:id="@+id/tv_detail_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 1"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Member Name -->
    <TextView
        android:id="@+id/tv_detail_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 이름: 임지민"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_id"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Collector Name -->
    <TextView
        android:id="@+id/tv_detail_collector_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수거자 이름: test"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_member_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Complete Date -->
    <TextView
        android:id="@+id/tv_detail_complete_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료 날짜: 2024-08-25T05:11:39.506350"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_collector_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Powder Quantity -->
    <TextView
        android:id="@+id/tv_detail_powder_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가루약 수량: 3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_complete_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- General Quantity -->
    <TextView
        android:id="@+id/tv_detail_general_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일반의약품 수량: 3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_powder_quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Professional Quantity -->
    <TextView
        android:id="@+id/tv_detail_professional_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전문의약품 수량: 3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_general_quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Liquid Quantity -->
    <TextView
        android:id="@+id/tv_detail_liquid_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="액체약 수량: 3"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_professional_quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Ointment Quantity -->
    <TextView
        android:id="@+id/tv_detail_ointment_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연고약 수량: 2"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_liquid_quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Is Completed -->
    <TextView
        android:id="@+id/tv_detail_is_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료 여부: 미완료"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_ointment_quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Reservation Date -->
    <TextView
        android:id="@+id/tv_detail_reservation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약 날짜: 2024-08-24T15:30"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_is_completed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Address -->
    <TextView
        android:id="@+id/tv_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소: 주소입니다."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_reservation_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>